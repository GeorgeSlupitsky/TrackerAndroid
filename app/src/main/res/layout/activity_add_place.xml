<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.micro_gis.microgistracker.AddPlaceActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_height="match_parent"
                android:layout_width="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/save_marker"
                    android:gravity = "center"
                    android:id="@+id/toolbar_title"
                    android:textSize="24dp" />

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/enter_name_of_place"
            android:id="@+id/textView4"
            android:layout_below="@+id/textView3"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:textSize="17dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/get_name_place"
            android:layout_below="@+id/textView4"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/description"
            android:id="@+id/textView21"
            android:layout_gravity="center_horizontal"
            android:textSize="17dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/marker_description"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/chose_marker_ic"
            android:id="@+id/textView20"
            android:layout_gravity="center_horizontal"
            android:textSize="17dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/horizontalScrollView" >

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/p_g_2x"
                            android:layout_column="0"
                            android:src="@drawable/p_g_2x"
                            android:background="#ffffff"
                            android:layout_margin="5dp" />

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/p_y_2x"
                            android:background="#ffffff"
                            android:layout_column="1"
                            android:src="@drawable/p_y_2x"
                            android:layout_margin="5dp" />

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/p_b_2x"
                            android:background="#ffffff"
                            android:layout_column="2"
                            android:src="@drawable/p_b_2x"
                            android:layout_margin="5dp" />

                        <ImageButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/p_r_2x"
                            android:background="#ffffff"
                            android:layout_column="3"
                            android:src="@drawable/p_r_2x"
                            android:layout_margin="5dp"
                            android:layout_marginRight="10dp" />

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/f2_b_2x"
                            android:background="#ffffff"
                            android:layout_column="4"
                            android:src="@drawable/f2_b_2x"
                            android:layout_margin="5dp" />

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/f2_g_2x"
                            android:background="#ffffff"
                            android:layout_column="8"
                            android:src="@drawable/f2_g_2x"
                            android:layout_margin="5dp" />

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/f2_y_2x"
                            android:background="#ffffff"
                            android:layout_column="4"
                            android:src="@drawable/f2_y_2x"
                            android:layout_margin="5dp" />

                        <ImageButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/f2_r_2x"
                            android:background="#ffffff"
                            android:layout_column="4"
                            android:src="@drawable/f2_r_2x"
                            android:layout_margin="5dp" />

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/f4_b_2x"
                            android:background="#ffffff"
                            android:layout_column="10"
                            android:src="@drawable/f4_b_2x"
                            android:layout_margin="5dp" />

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/f4_g_2x"
                            android:background="#ffffff"
                            android:layout_column="10"
                            android:src="@drawable/f4_g_2x"
                            android:layout_margin="5dp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/f1_r_2x"
                            android:background="#ffffff"
                            android:layout_column="0"
                            android:src="@drawable/f1_r_2x"
                            android:layout_margin="5dp" />

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/f1_b_2x"
                            android:background="#ffffff"
                            android:layout_column="1"
                            android:src="@drawable/f1_b_2x"
                            android:layout_margin="5dp" />

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/f1_g_2x"
                            android:background="#ffffff"
                            android:layout_column="2"
                            android:src="@drawable/f1_g_2x"
                            android:layout_margin="5dp" />

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/f1_y_2x"
                            android:background="#ffffff"
                            android:layout_column="3"
                            android:src="@drawable/f1_y_2x"
                            android:layout_margin="5dp"
                            android:layout_marginRight="10dp" />

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/f3_y_2x"
                            android:background="#ffffff"
                            android:layout_column="4"
                            android:src="@drawable/f3_y_2x"
                            android:layout_margin="5dp" />

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/f3_b_2x"
                            android:background="#ffffff"
                            android:layout_column="8"
                            android:src="@drawable/f3_b_2x"
                            android:layout_margin="5dp" />

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/f3_g_2x"
                            android:background="#ffffff"
                            android:layout_column="9"
                            android:src="@drawable/f3_g_2x"
                            android:layout_margin="5dp" />

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/f3_r_2x"
                            android:background="#ffffff"
                            android:layout_column="10"
                            android:src="@drawable/f3_r_2x"
                            android:layout_margin="5dp" />

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/f4_r_2x"
                            android:background="#ffffff"
                            android:layout_column="10"
                            android:src="@drawable/f4_r_2x"
                            android:layout_margin="5dp" />

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/f4_y_2x"
                            android:background="#ffffff"
                            android:layout_column="10"
                            android:src="@drawable/f4_y_2x"
                            android:layout_margin="5dp" />

                    </TableRow>

                </TableLayout>
            </HorizontalScrollView>

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:id="@+id/add_marker"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/get_name_place"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</RelativeLayout>
