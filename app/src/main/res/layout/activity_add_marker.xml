<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_height="match_parent"
                android:layout_width="match_parent">

                <Button
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:id="@+id/back_buttonAP"
                    android:background="@drawable/ic_arrow_back_white_24dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/save_marker"
                    android:gravity = "center"
                    android:textColor="@color/white"
                    android:id="@+id/toolbar_title"
                    android:textSize="24dp" />

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/enter_name_of_place"
            android:id="@+id/textView4"
            android:layout_below="@+id/textView3"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:textSize="17dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/get_name_place"
            android:layout_below="@+id/textView4"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/description"
            android:id="@+id/textView21"
            android:layout_gravity="center_horizontal"
            android:textSize="17dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/marker_description"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/chose_marker_ic"
            android:id="@+id/textView20"
            android:layout_gravity="center_horizontal"
            android:textSize="17dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:id="@+id/scrollView"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <ImageButton
                        android:id="@+id/p_g_2x"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="#ffffff"
                        android:src="@drawable/p_g_2x" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/p_y_2x"
                        android:background="#ffffff"
                        android:src="@drawable/p_y_2x"
                        android:layout_margin="5dp" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/p_b_2x"
                        android:background="#ffffff"
                        android:src="@drawable/p_b_2x"
                        android:layout_margin="5dp" />

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/p_r_2x"
                        android:background="#ffffff"
                        android:src="@drawable/p_r_2x"
                        android:layout_margin="5dp"
                        android:layout_marginRight="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/f2_g_2x"
                        android:background="#ffffff"
                        android:src="@drawable/f2_g_2x"
                        android:layout_margin="5dp" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/f2_y_2x"
                        android:background="#ffffff"
                        android:src="@drawable/f2_y_2x"
                        android:layout_margin="5dp" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/f2_b_2x"
                        android:background="#ffffff"
                        android:src="@drawable/f2_b_2x"
                        android:layout_margin="5dp" />

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/f2_r_2x"
                        android:background="#ffffff"
                        android:src="@drawable/f2_r_2x"
                        android:layout_margin="5dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/f4_g_2x"
                        android:background="#ffffff"
                        android:src="@drawable/f4_g_2x"
                        android:layout_margin="5dp" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/f4_y_2x"
                        android:background="#ffffff"
                        android:src="@drawable/f4_y_2x"
                        android:layout_margin="5dp" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/f4_b_2x"
                        android:background="#ffffff"
                        android:src="@drawable/f4_b_2x"
                        android:layout_margin="5dp" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/f4_r_2x"
                        android:background="#ffffff"
                        android:src="@drawable/f4_r_2x"
                        android:layout_margin="5dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/f1_g_2x"
                        android:background="#ffffff"
                        android:src="@drawable/f1_g_2x"
                        android:layout_margin="5dp" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/f1_y_2x"
                        android:background="#ffffff"
                        android:src="@drawable/f1_y_2x"
                        android:layout_margin="5dp"
                        android:layout_marginRight="10dp" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/f1_b_2x"
                        android:background="#ffffff"
                        android:src="@drawable/f1_b_2x"
                        android:layout_margin="5dp" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/f1_r_2x"
                        android:background="#ffffff"
                        android:src="@drawable/f1_r_2x"
                        android:layout_margin="5dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/f3_g_2x"
                        android:background="#ffffff"
                        android:src="@drawable/f3_g_2x"
                        android:layout_margin="5dp" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/f3_y_2x"
                        android:background="#ffffff"
                        android:src="@drawable/f3_y_2x"
                        android:layout_margin="5dp" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/f3_b_2x"
                        android:background="#ffffff"
                        android:src="@drawable/f3_b_2x"
                        android:layout_margin="5dp" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/f3_r_2x"
                        android:background="#ffffff"
                        android:src="@drawable/f3_r_2x"
                        android:layout_margin="5dp" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:id="@+id/add_marker"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
