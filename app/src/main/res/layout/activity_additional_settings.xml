<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.micro_gis.microgistracker.activities.AdditionalSettingsActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <CheckBox
                    android:id="@+id/labelParamsCheckBox"
                    android:checked="true"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:id="@+id/labelParams"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/labelParams"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black"
                    android:layout_marginLeft="25dp"/>

            </TableRow>
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <CheckBox
                    android:id="@+id/clusterParamsCheckBox"
                    android:checked="true"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:id="@+id/clusterParams"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/clusterParams"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black"
                    android:layout_marginLeft="25dp"/>
            </TableRow>
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <CheckBox
                    android:id="@+id/geocoderParamsCheckBox"
                    android:checked="false"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:id="@+id/geocoderParams"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/geocoderParams"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black"
                    android:layout_marginLeft="25dp"/>
            </TableRow>
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <CheckBox
                    android:id="@+id/navigationParamsCheckBox"
                    android:checked="true"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:id="@+id/navigationParams"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/navigationParams"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black"
                    android:layout_marginLeft="25dp"/>

            </TableRow>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <CheckBox
                    android:id="@+id/changeLabels"
                    android:checked="false"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:id="@+id/changeLabelsParams"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/changeLabelParams"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black"
                    android:layout_marginLeft="25dp"/>

            </TableRow>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <CheckBox
                    android:id="@+id/drawLine"
                    android:checked="true"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:id="@+id/drawLineParams"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/drawLineParams"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black"
                    android:layout_marginLeft="25dp"/>

            </TableRow>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <CheckBox
                    android:id="@+id/buttonsOfControl"
                    android:checked="true"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:id="@+id/buttonsOfControlParams"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/buttonsOfControlParams"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black"
                    android:layout_marginLeft="25dp"/>

            </TableRow>

        </TableLayout>
    </ScrollView>
</RelativeLayout>
