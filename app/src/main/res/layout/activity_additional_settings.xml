<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.micro_gis.microgistracker.activities.AdditionalSettingsActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <TextView
                    android:id="@+id/labelParams"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/labelParams"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black"/>

                <CheckBox
                    android:id="@+id/labelParamsCheckBox"
                    android:checked="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="35dp"/>
            </TableRow>
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <TextView
                    android:id="@+id/clusterParams"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/clusterParams"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black"/>

                <CheckBox
                    android:id="@+id/clusterParamsCheckBox"
                    android:checked="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="35dp"/>
            </TableRow>
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <TextView
                    android:id="@+id/geocoderParams"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/geocoderParams"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black"/>

                <CheckBox
                    android:id="@+id/geocoderParamsCheckBox"
                    android:checked="false"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="35dp"/>
            </TableRow>


        </TableLayout>
    </ScrollView>
</RelativeLayout>
